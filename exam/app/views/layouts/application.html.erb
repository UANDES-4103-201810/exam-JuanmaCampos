}

/* Links inside the navbar */
.navbar a {
    float: left;
    display: block;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}
    
    </style>
  </head>

  <body>
    <%= yield %>
    <div class="navbar">
  <a href="#root">Home</a>
  <a href="/customers/sign_in">Sign in</a>
